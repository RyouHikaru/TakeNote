<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/upImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundredfortysevendp"
        android:contentDescription="@string/user_display_profile"
        android:paddingTop="30dp"
        app:srcCompat="@drawable/ic_account_circle_default_24dp" />

    <TextView
        android:id="@+id/firstnameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fortyfivedp"
        android:paddingTop="@dimen/thirtyfivedp"
        android:paddingRight="@dimen/fortyfivedp"
        android:text="@string/first_name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/eighteensp" />

    <TextView
        android:id="@+id/lastnameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fortyfivedp"
        android:paddingTop="@dimen/tendp"
        android:paddingRight="@dimen/fortyfivedp"
        android:text="@string/last_name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/eighteensp" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fortyfivedp"
        android:paddingTop="@dimen/tendp"
        android:paddingRight="@dimen/fortyfivedp"
        android:text="@string/address"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/eighteensp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fortyfivedp"
        android:paddingTop="@dimen/tendp"
        android:paddingRight="@dimen/fortyfivedp"
        android:text="@string/email"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/eighteensp" />

</LinearLayout>