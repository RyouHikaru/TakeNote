<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.takenote">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tn_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tn_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.takenote.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.takenote.LoginActivity"
            android:theme="@style/AppTheme.LoginSignupTheme"/>
        <activity android:name="com.example.takenote.SignUpActivity"
            android:theme="@style/AppTheme.LoginSignupTheme"/>
        <activity android:name="com.example.takenote.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:hardwareAccelerated="true"/>
        <activity android:name=".AboutActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>